@model IEnumerable<CommonLayer.CommonModels.EventRequestDetailModel>
@{
    ViewBag.Title = "AddSpeaker";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
    TempData.Keep("EventId");
}


<div class="box-header with-border">
    <h3 class="box-title">EventDetail List</h3>
    <div style="float:right">
        <button value="Create New"
                class="btn btn-primary btn-sm" type="button" id="addressSearch"
                onclick="location.href='@Url.Action("Index","EventRequest")'">
            Back
        </button>
    </div>
    <br />
    </div>

    <div class="col-lg-12">
        <button value="Create New"
                class="btn btn-primary btn-sm" type="button" id="addressSearch"
                onclick="location.href='@Url.Action("AddSpeakers")'">
            Create New
        </button>
    </div>
    <div class="col-lg-12">
        <table class="table table-bordered table-hover table-responsive">
            <thead>
                <tr>
                    <td><b>ID</b></td>
                    <td><b>Speaker Name</b></td>
                    <td><b>Toic</b></td>
                    <td><b>Date</b></td>
                    <td><b>Time</b></td>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.SpeakerName</td>
                        <td>@item.Topic</td>
                        <td>@item.Date</td>
                        <td>@item.Time</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>




@model CommonLayer.CommonModels.EventRequestModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

<div class="box-header with-border">
    <h3 class="box-title">Event Request List</h3>
</div>
<br />

<div class="container">
    <button value="Delete"
            class="btn btn-success btn-sm" type="button" id="addressSearch"
            onclick="location.href='@Url.Action("CreateEvent", "EventRequest" )'">
        Add New Event
    </button>
     
       
        <div class="col-lg-12">

            <table class="table table-bordered table-responsive">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Event Name</th>
                        <th>Description </th>
                        <th>Event Type </th>
                        <th>Venu</th>
                        <th>FromDate</th>
                        <th>ToDate</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var item in Model.EventRequestModelList)
                {
                        <tr>
                            <td>@item.Id </td>
                            <td>@item.EventName </td>
                            <td>@item.Description </td>
                            <td>@item.EventTypeName </td>
                            <td>@item.Venu </td>
                            <td>@item.FromDate</td>
                            <td>@item.ToDate</td>
                            <td>
                                <button value="Delete"
                                        class="btn btn-danger btn-sm" type="button" id="addressSearch"
                                        onclick="location.href='@Url.Action("GetEventDetails", "EventRequest" ,new {id = item.Id })'">
                                    Add Speakers
                                </button>
                            </td>
                        </tr>
                }

                </tbody>
            </table>
        </div>
    </div>
 
